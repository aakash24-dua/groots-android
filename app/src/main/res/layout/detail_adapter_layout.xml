<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:elevation="4dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".6">

                <ImageView
                    android:id="@+id/iconImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="10dp"
                android:layout_weight=".2"
                android:orientation="horizontal">

                <groots.canbrand.com.groots.utilz.TextViewLatoRegular
                    android:id="@+id/textItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Nasik Onion"
                    android:textColor="@color/textPrimaryDark"
                    android:textSize="18dp" />

                <groots.canbrand.com.groots.utilz.TextViewLatoRegular
                    android:id="@+id/textItemQuan"
                    android:layout_width="0dp"
                    android:layout_marginLeft="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/textPrimaryDark"
                    android:text="10 Kg."
                    android:textSize="18sp" />
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="45dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                <groots.canbrand.com.groots.utilz.TextViewLatoRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/indian_rupees"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />



                <groots.canbrand.com.groots.utilz.TextViewLatoRegular
                    android:id="@+id/itemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="45"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="46dp"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:background="@color/textPrimaryLight"
                android:layout_gravity="end"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_weight=".1">

                <groots.canbrand.com.groots.utilz.TextViewLatoRegular
                    android:id="@+id/itemdesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textPrimaryLight"
                    android:text="Gradehgufse a hiuhyfi h "
                    android:textSize="12dp" />

                <groots.canbrand.com.groots.utilz.TextViewLatoRegular
                    android:id="@+id/itemquantity"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10 kg"
                    android:textColor="@color/textPrimaryDark"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_weight=".1"
                android:orientation="horizontal">

                <groots.canbrand.com.groots.utilz.TextViewLatoRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diameter : "
                    android:textColor="@color/textPrimaryLight"
                    android:textSize="12dp" />

                <groots.canbrand.com.groots.utilz.TextViewLatoRegular
                    android:id="@+id/itemdia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5cm"
                    android:textColor="@color/textPrimaryLight"
                    android:textSize="12dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/textPrimaryLight"
                    ></View>


                <groots.canbrand.com.groots.utilz.TextViewLatoRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color : "
                    android:textColor="@color/textPrimaryLight"
                    android:textSize="12dp" />

                <groots.canbrand.com.groots.utilz.TextViewLatoRegular
                    android:id="@+id/itemcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red"
                    android:textColor="@color/textPrimaryLight"
                    android:textSize="12dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/textPrimaryLight"
                    ></View>


                <groots.canbrand.com.groots.utilz.TextViewLatoRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grade : "
                    android:textColor="@color/textPrimaryLight"
                    android:textSize="12dp" />

                <groots.canbrand.com.groots.utilz.TextViewLatoRegular
                    android:id="@+id/itemdgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textColor="@color/textPrimaryLight"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/product_detail_bg1"
                android:gravity="center"
                android:orientation="horizontal">

                <groots.canbrand.com.groots.utilz.TextViewLatoRegular
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="11dp"
                    android:text="SELECTED\nQUANTITY" />

                <groots.canbrand.com.groots.utilz.TextViewLatoRegular
                    android:id="@+id/selectedquantity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="130 kg"
                    android:textColor="@color/textPrimaryDark"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/linearTxtMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/txtMinus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/reduce_quantity"
                        android:gravity="center"
                        android:paddingBottom="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/txtCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="2"
                        android:text="100"
                        android:gravity="center"
                        android:maxLines="1"
                        android:maxLength="4"
                        android:inputType="number"
                        android:background="#00000000"
                        android:textSize="16dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DCDCDC"></View>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearTxtPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/txtPlus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/add_quantity"
                        android:gravity="center"
                        android:paddingBottom="5dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>