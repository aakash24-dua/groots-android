<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/history_card_view"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_gravity="center"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="4dp"
        android:background="#ffffff"
        android:elevation="2dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
              android:orientation="vertical">

                        <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:gravity="center"
                              android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginLeft="8dp"
                                android:gravity="center"
                                android:orientation="vertical">



                                <LinearLayout
                                    android:background="@color/textGreen"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">


                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="match_parent"
                                     android:text="BILL"
                                     android:layout_weight="1"

                                     android:textColor="@color/white"
                                     android:textStyle="bold"

                                     android:gravity="center"/>




                                <TextView
                                android:id="@+id/date_id"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:maxLines="1"
                                    android:gravity="center"
                                android:ellipsize="end"
                                   android:layout_weight="1"
                                android:textColor="@color/white"
                                android:text="99/2345/56"
                                    android:textStyle="bold"
                                android:textSize="13dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:text="PAID"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:gravity="center"
                                        />




                                    </LinearLayout>
                                
                                
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="17dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="2dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="INV NO"
                                        android:layout_weight="1"

                                        />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="NUG2179847839"

                                        android:id="@+id/inv_no_id"
                                        android:textSize="13dp"

android:layout_weight="1"                                        android:gravity="right"
                                        android:textStyle="bold"
                                        />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="Id"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:textAllCaps="true"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="1"
                                        android:gravity="right|bottom"
                                        android:textStyle="bold"
                                        android:id="@+id/trans_no_id"
                                        android:textSize="10dp"
                                        android:text="1234567890GMOIHDN"/>




                                </LinearLayout>






                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="0dp"
                                        android:layout_weight="1"

                                        android:textColor="@color/textPrimaryDark"
                                        android:text="Status"
                                        android:textSize="15dp" />


                                    <TextView
                                        android:id="@+id/stat"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_weight="1"

                                        android:textColor="@color/textPrimaryDark"
                                        android:text="Cancelled"
                                        android:textSize="15dp" />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="Amount("
                                        android:gravity="bottom"

                                        />



                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="@string/indian_rupees"
                                        android:layout_gravity="bottom"
                                        android:layout_marginLeft="0dp"

                                        android:textColor="@color/colorPrimary"
                                        android:textSize="15dp"
                                        android:gravity="bottom"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text=")"
                                        android:gravity="bottom"
                                        android:layout_marginLeft="0dp"/>



                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="30000.00"
                                        android:layout_weight="1"

                                        android:id="@+id/paid_amount_id"
                                        android:textColor="@color/textPrimaryDark"
                                        android:textStyle="bold"
                                        android:gravity="right"
                                        />







                                </LinearLayout>




                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:gravity="left"
                                    android:layout_weight="1"
                                    android:layout_marginTop="0dp"
                                    android:orientation="horizontal">


                                     <TextView
                                         android:id="@+id/tex"
                                         android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         android:text="Total("
                                         android:layout_gravity="center"
                                         android:layout_marginBottom="0dp"
                                         android:textColor="@color/textPrimaryDark"
                                         android:textSize="15dp" />



                                    <TextView
                                     android:id="@+id/textRupee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/indian_rupees"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="0dp"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginBottom="0dp"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="15dp" />


                                    <TextView
                                        android:id="@+id/tx"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=")"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="0dp"
                                        android:textColor="@color/textPrimaryDark"
                                        android:textSize="15dp" />

                                    <TextView
                                    android:id="@+id/textItemPric"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:layout_gravity="center"
                                        android:gravity="right"
                                        android:layout_weight="1"
                                    android:layout_marginBottom="0dp"
                                    android:text="25044.00"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="15dp" />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="Mode"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="ONLINE TRANSFER"
                                        android:textSize="11dp"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:textStyle="bold"
                                        android:textColor="@color/textPrimaryDark"
                                        android:id="@+id/mode_payment_id"
                                        />


                                 </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:id="@+id/cheque_id">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="right"
                                        android:layout_marginLeft="100dp"
                                        android:layout_weight="1"
                                        android:text="Cheque Status-"
                                        android:id="@+id/cheq_stat_id"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="right"
                                        android:id="@+id/cheque_status_id"
                                        android:text="PENDING"
                                        android:layout_weight="1"
                                        android:textStyle="bold"
                                        />



                                </LinearLayout>









                            </LinearLayout>


                            <!--<RelativeLayout
                                android:id="@+id/forward"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginTop="0dp">

                                <ImageButton
                                    android:id="@+id/forward_image"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:src="@drawable/forward"
                                    android:background="@null"
                                    />
                            </RelativeLayout>-->


                        </LinearLayout>





                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>