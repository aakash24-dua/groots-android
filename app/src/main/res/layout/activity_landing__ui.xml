<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/cdLanding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ui.LandingUI">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbars"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/header_green_texture"
                app:contentInsetLeft="0dp"
                android:contentInsetStart="0dp"
                app:contentInsetStart="0dp"
                android:contentInsetLeft="0dp">


                <groots.canbrand.com.groots.utilz.TextViewLatoRegular
                    android:id="@+id/tooltext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nofilter,SDA Market"
                    android:textColor="@color/white"
                    android:textSize="18dp"/>

            </android.support.v7.widget.Toolbar>

            <FrameLayout
                android:id="@+id/frameLayoutForAllFrags"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?attr/actionBarSize"/>

        <RelativeLayout

            android:id="@+id/loadermain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center">

            <groots.canbrand.com.groots.utilz.Loader
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/rotate"/>
        </RelativeLayout>


    </android.support.design.widget.CoordinatorLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false"
        android:background="@color/drawer_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="150dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/pending_menu"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <groots.canbrand.com.groots.utilz.TextViewLatoBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:textSize="10dp"
                    android:textColor="@color/textPrimaryDark"
                    android:layout_toRightOf="@+id/order"
                    android:text="ORDERS PENDING" />

                <ImageView
                    android:id="@+id/order"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/pending" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#9BBE9B"></View>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/help_menu"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <groots.canbrand.com.groots.utilz.TextViewLatoBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/textPrimaryLight"
                    android:textSize="10dp"
                    android:layout_toRightOf="@+id/help"
                    android:text="HELP" />

                <ImageView
                    android:id="@+id/help"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/help4" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/view"></View>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/contact_menu"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <groots.canbrand.com.groots.utilz.TextViewLatoBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:textSize="10dp"
                    android:textColor="@color/textPrimaryLight"
                    android:layout_toRightOf="@+id/contact"
                    android:text="CONTACT US" />

                <ImageView
                    android:id="@+id/contact"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/contact" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/view"></View>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rate_menu"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <groots.canbrand.com.groots.utilz.TextViewLatoBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:textSize="10dp"
                    android:textColor="@color/textPrimaryLight"
                    android:layout_toRightOf="@+id/rate"
                    android:text="RATE US" />

                <ImageView
                    android:id="@+id/rate"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/rate" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/view"></View>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/about_menu"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <ImageView
                    android:id="@+id/iv_about"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"

                    android:src="@drawable/info" />

                <groots.canbrand.com.groots.utilz.TextViewLatoBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:textSize="10dp"
                    android:textColor="@color/textPrimaryLight"
                    android:layout_toRightOf="@+id/iv_about"
                    android:text="ABOUT GROOTS" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/view"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/logout_menu"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <groots.canbrand.com.groots.utilz.TextViewLatoBold
                    android:id="@+id/txtcontact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:textSize="10dp"
                    android:textColor="#FF0000"
                    android:layout_toRightOf="@+id/out"
                    android:text="LOGOUT" />

                <ImageView
                    android:id="@+id/out"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/out" />



            </RelativeLayout>

        </LinearLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
